<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306/noticedata</param-value>
    </context-param>
    <context-param>
        <param-name>userid</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>root</param-value>
    </context-param>
    <servlet>
        <servlet-name>VerifyUser</servlet-name>
        <servlet-class>com.ssi.VerifyUser</servlet-class>
        <init-param>
            <param-name>admin-id</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>admin-pw</param-name>
            <param-value>ssi</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>FacultyAccountCreation</servlet-name>
        <servlet-class>com.ssi.FacultyAccountCreation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentAccountCreation</servlet-name>
        <servlet-class>com.ssi.StudentAccountCreation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewStudReq</servlet-name>
        <servlet-class>com.ssi.ViewStudReq</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnableStudentAccount</servlet-name>
        <servlet-class>com.ssi.EnableStudentAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveNotice</servlet-name>
        <servlet-class>com.ssi.SaveNotice</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowDepts</servlet-name>
        <servlet-class>com.ssi.ShowDepts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NoticeBoard</servlet-name>
        <servlet-class>com.ssi.NoticeBoard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KillSession</servlet-name>
        <servlet-class>com.ssi.KillSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveNoticeImg</servlet-name>
        <servlet-class>com.ssi.SaveNoticeImg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImageLoader</servlet-name>
        <servlet-class>com.ssi.ImageLoader</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowDeptsImg</servlet-name>
        <servlet-class>com.ssi.ShowDeptsImg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NoticeBoardImg</servlet-name>
        <servlet-class>com.ssi.NoticeBoardImg</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyUser</servlet-name>
        <url-pattern>/VerifyUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FacultyAccountCreation</servlet-name>
        <url-pattern>/FacultyAccountCreation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentAccountCreation</servlet-name>
        <url-pattern>/StudentAccountCreation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewStudReq</servlet-name>
        <url-pattern>/ViewStudReq</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnableStudentAccount</servlet-name>
        <url-pattern>/EnableStudentAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveNotice</servlet-name>
        <url-pattern>/SaveNotice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowDepts</servlet-name>
        <url-pattern>/ShowDepts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NoticeBoard</servlet-name>
        <url-pattern>/NoticeBoard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KillSession</servlet-name>
        <url-pattern>/KillSession</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveNoticeImg</servlet-name>
        <url-pattern>/SaveNoticeImg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageLoader</servlet-name>
        <url-pattern>/ImageLoader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowDeptsImg</servlet-name>
        <url-pattern>/ShowDeptsImg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NoticeBoardImg</servlet-name>
        <url-pattern>/NoticeBoardImg</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
